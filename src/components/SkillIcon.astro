---
import { brandColors } from '../data/brandColors';
interface Props { name: string; }
const { name } = Astro.props as Props;
const fileMap: Record<string,string> = {
  'Java':'java','Python':'python','MySQL':'mysql','PostgreSQL':'postgresql','HTML':'html','CSS':'css','JavaScript':'javascript','React.js':'react','Spring Boot':'spring','Node.js':'node-js','Tailwind CSS':'tailwind-css','Cloud Computing':'cloud'
};
const filename = fileMap[name] || 'cloud';
const base = import.meta.env.BASE_URL; // '/sugan/' in production
const color = (brandColors as any)[name] || '#d1c5ad';
---
<div class="skill-icon" title={name} aria-label={name} style={`--brand:${color}`}> 
  <img src={`${base}icons/${filename}.svg`} alt={name} loading="lazy" width="40" height="40" />
  <span class="icon-label">{name}</span>
</div>
